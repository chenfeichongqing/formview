<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <com.github.chenfeichongqing.formview.view.FormTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="18dp"
                android:paddingRight="15dp"
                android:paddingBottom="18dp"
                app:fv_right_image="@drawable/ic_svg_right_arrow"
                app:fv_title="我的标题"
                app:ftv_text="@string/app_name"
                app:fv_title_right_margin="15dp"
                app:fv_title_width="weight_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <com.github.chenfeichongqing.formview.view.FormSwitchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:fsv_checkbox_drawable="@drawable/checkbox_switch"
                app:fsv_checkbox_right_margin="10dp"
                app:fv_left_image="@drawable/ic_svg_star"
                app:fv_right_image="@drawable/ic_svg_right_arrow"
                app:fv_title="测试文本标题"
                app:fv_title_right_margin="15dp"
                app:fv_title_width="weight_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <com.github.chenfeichongqing.formview.view.FormRadioView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="18dp"
                android:paddingRight="15dp"
                android:paddingBottom="18dp"
                app:frv_layout_min_width="150dp"
                app:frv_left_to_right_margin="10dp"
                app:frv_text_color="@color/radio_text_color"
                app:frv_text_drawable_left="@drawable/radio_check"
                app:frv_text_drawable_padding="10dp"
                app:fv_left_image="@drawable/ic_svg_star"
                app:fv_right_image="@drawable/ic_svg_right_arrow"
                app:fv_title="测试文本标题"
                app:fv_title_right_margin="15dp"
                app:fv_title_width="weight_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <com.github.chenfeichongqing.formview.view.FormImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="18dp"
                android:paddingRight="15dp"
                android:paddingBottom="18dp"
                app:fiv_src="@drawable/base_lib_iv_header_member"
                app:fv_left_image="@drawable/ic_svg_star"
                app:fv_right_image="@drawable/ic_svg_right_arrow"
                app:fv_title="测试文本标题"
                app:fv_title_right_margin="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <com.github.chenfeichongqing.formview.view.FormEditView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:fev_hint="测试提示文字"
                app:fev_text_bg="@null"
                app:fev_unit_text="kg"
                app:fv_left_image="@drawable/ic_svg_star"
                app:fev_text_right_margin="5dp"
                app:fv_right_image="@drawable/ic_svg_right_arrow"
                app:fv_title="可编辑表单"
                app:fv_title_right_margin="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <com.github.chenfeichongqing.formview.view.FormEditMultiView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:femv_content_left_padding="15dp"
                app:femv_content_right_padding="15dp"
                app:femv_count_view_visible="true"
                app:femv_title_layout_bottom_padding="18dp"
                app:femv_title_layout_left_padding="15dp"
                app:femv_title_layout_right_padding="15dp"
                app:femv_title_layout_top_padding="18dp"
                app:fev_hint="测试提示文字"
                app:fev_text_bg="@null"
                app:fev_text_gravity="top"
                app:fev_text_lines="5"
                app:fev_text_max_length="300"
                app:fev_text_right_margin="5dp"
                app:fev_unit_text="m/s"
                app:fv_left_image="@drawable/ic_svg_star"
                app:fv_title="多行输入文本标题"
                app:fv_title_width="weight_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />

            <com.github.chenfeichongqing.formview.view.FormEditTipsView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="18dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                app:fetv_tips_text="这是一条测试Tips的内容文本"
                app:fetv_tips_text_color="@android:color/holo_red_light"
                app:fetv_tips_text_size="14sp"
                app:fetv_tips_top_margin="10dp"
                app:fev_text_width="weight_content"
                app:fev_hint="提示文字标题"
                app:fev_text_bg="@null"
                app:fev_text_gravity="right"
                app:fev_unit_text="m/s"
                app:fev_text_right_margin="5dp"
                app:fv_left_image="@drawable/ic_svg_star"
                app:fv_right_image="@drawable/ic_svg_right_arrow"
                app:fv_title="提示文本标题"
                app:fv_title_right_margin="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>